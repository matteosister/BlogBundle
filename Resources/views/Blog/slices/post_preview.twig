<div class="post-preview">
    <h4 class="category quiet">{{ post.category }}</h4>
    
    <h2 class="post-title">
        <a href="{{ path('blog_post', {'slug': post.slug }) }}" title="go to {{ post }} post">{{ post }}</a>
    </h2>
    <div class="date small">
        <div class="month">{{ post.date|date("M") }}</div>
        <div class="day">{{ post.date|date("d") }}</div>
        <div class="year">{{ post.date|date("Y") }}</div>
    </div>
    <p class="abstract quiet">
        {{ post.abstract }}
    </p>

    <ul class="tag-list">
    {% for tag in post.tags %}
        <li class="quiet {{ loop.first ? 'first' : '' }} {{ loop.last ? 'last' : '' }}">
            <a href="{{ path('blog_tag', { 'slug': tag.slug }) }}">{{ tag }}</a>
        </li>
    {% endfor %}
    </ul>

    <div>
        <strong class="quiet">{{ post.comments|length }} {{ post.comments|length == 1 ? 'Comment' : 'Comments' }}</strong>
    </div>
</div>