{% extends "::base.html.twig" %}

{% block title %}BlogBundle :: {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/bundles/sonatablueprint/src/reset.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="/bundles/sonatablueprint/screen.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="/bundles/sonatablueprint/print.css" type="text/css" media="print">
    <!--[if lt IE 8]><link rel="stylesheet" href="/bundles/sonatablueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->
    <link rel="stylesheet" href="/bundles/sonatablueprint/plugins/fancy-type/screen.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="/css/blueprint-plugins/sprites/sprite.css" type="text/css" media="screen, projection">
    <link rel="stylesheet" href="/bundles/cypressblog/css/BlogBundle.css" />
    <link rel="stylesheet" href="/bundles/cypressblog/css/zardi/buttons.css" />
{% endblock %}

{% block body %}
    <div id="wrapper" class="blogbundle container">
        <div class="header span-24 last">
            {% block menu %}
                <div id="main-menu">
                    <ul>
                        <li class="first">
                            <a class="button {{ selected == 'homepage' ? 'blue' : 'orange' }}" href="{{ path('blog_home') }}">Home</a>
                        </li>
                        <li>
                            <a class="button {{ selected == 'categories' ? 'blue' : 'orange' }}" href="{{ path('blog_categories') }}">Categories</a>
                        </li>
                        <li class="last">
                            <a class="button {{ selected == 'tags' ? 'blue' : 'orange' }}" href="{{ path('blog_tags') }}">Tags</a>
                        </li>
                    </ul>
                </div>
            {% endblock %}
            <h1><a href="{{ path('blog_home') }}">Blog</a></h1>
        </div>
        {% block content %}{% endblock %}
        {% block sidebar %}{% endblock %}
    </div>
{% endblock %}
